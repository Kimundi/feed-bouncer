<div class="items">
    {{#each this.item_groups}}
    <div class="item_group_heading">
        Week {{this.week}} ({{this.start}} &mdash; {{this.end}})
    </div>
    {{#each this.items}}
    <div class="item">
        {{#if this.show_feed}}
        <div class="item_feed">
            <a href="/feed/{{this.feed_id}}">
                <div class="item_link">
                    {{this.feed_name}}
                </div>
            </a>
        </div>
        {{/if}}

        <div class="item_content">
            {{#if this.content_link}}
            <a href="{{this.content_link}}">
                {{/if}}
                <div class={{#if this.is_read}}"item_link_read"{{else}}"item_link"{{/if}}>
                    {{this.item_name}}
                </div>
                {{#if this.content_link}}
            </a>
            {{/if}}
        </div>

        <div class={{#if this.is_read}}"item_read_hidden"{{else}}"item_read"{{/if}}>
            <a href="/mark_read/{{this.feed_id}}/{{this.item_id}}">read</a>
        </div>

    </div>
    {{/each}}
    {{/each}}
</div>
