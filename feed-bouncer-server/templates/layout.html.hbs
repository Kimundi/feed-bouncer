<!doctype html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Feed Bouncer - {{title}}</title>
    <style>
        body {
            background-color: rgb(70, 70, 70);
            font-family: sans-serif;
            color: white;
            margin: 0 !important;
            padding: 0 !important;
        }

        a {
            color: white;
            text-decoration: none;
        }

        a.a_no_style {
            color: white;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .items {
            display: flex;
            flex-direction: column;
        }

        .item_group_heading {
            width: 100%;
            border: 5px solid rgb(175, 175, 175);
            padding: 10px;
            box-sizing: border-box;
        }

        .item {
            display: table;
            width: 100%;
            border: 1px;
            box-sizing: border-box;
        }

        .item_feed {
            width: 30%;
            display: table-cell;
            box-sizing: border-box;
        }

        .item_content {
            width: 60%;
            display: table-cell;
            box-sizing: border-box;
        }

        .item_read {
            width: 10%;
            display: table-cell;
            box-sizing: border-box;
            text-align: right;
            padding: 5px;
            font-size: small;
        }

        .item_read>a {
            color: rgb(139, 139, 139);
        }

        .item_link {
            padding: 5px;
        }

        .item_link_read {
            color: rgb(139, 139, 139);
            padding: 5px;
        }
    </style>
</head>

<body>
    {{~> page~}}
</body>

</html>
